<div class="header">
{{name}}
</div>
<div class="body">

</div>
<div class="panel">
	<div id="{{ config.id }}"></div>
	<br />
</div>

<script>
var margin = {top: 10, right: 10, bottom: 10, left: 10},
    width = {{ config.width }} - margin.left - margin.right,
    height = {{ config.height }} - margin.top - margin.bottom;

var data = [
	{{#data.servers}}
	{
		name: "{{ name }}",
		vector: [{{ vector }}],
		type: "{{ type }}"
	},
	{{/data.servers}}
];

var legend = [{{#data.legend}}"{{ . }}", {{/data.legend}}];

var x = d3.scale.linear()
    .domain([-90, 90])
    .range([0, width])
    .nice();

var y = d3.scale.linear()
    .domain([100, -60])
    .range([0, height])
    .nice();

var color = d3.scale.category10();

var svg = d3.select("#{{ config.id }}").append("svg")
    .attr("width", width + margin.left + margin.right)
    .attr("height", height + margin.top + margin.bottom)
  .append("g")
    .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

svg.append("path")
  .attr("d", "M " + x(0) + " " + y(100) + " L " + x(85) + " " + y(-50) + " L " + x(-85) + " " + y(-50) + " z")
  .attr("stroke", "#000000")
  .style("stroke-width", "3")
  .attr("fill", "#373737");

var servers = svg.selectAll(".server")
    .data(data);

// current Value
servers.enter()
  .append("circle")
    .style("fill", function(d) { return color(d.type); })
    .attr("r", function(d) { return Math.max(5, d.vector[2]/3); })
    .attr("cx", function(d) { return x(d.vector[0]); })
    .attr("cy", function(d) { return y(d.vector[1]); })
    .style("opacity", 0.5);

labels = [
  {name: "user", vector: [0, 100]},
  {name: "system", vector: [85, -57]},
  {name: "iowait", vector: [-85, -57]},
];

var lab = svg.selectAll(".labels")
    .data(labels);
lab.enter()
  .append("text")
    .text(function(d) { return d.name })
    .attr("class", "label")
    .attr("text-anchor", "middle")
    .attr("x", function(d) { return x(d.vector[0]); })
    .attr("y", function(d) { return y(d.vector[1]); });

var legendText = svg.selectAll(".legend")
    .data(legend);
legendText.enter()
  .append("text")
    .text(function(d) { return d })
    .style("fill", function(d) { return color(d); })
    .attr("class", "legend")
    .attr("x", 0)
    .attr("y", function(d, i) { return i*22; });

</script>
